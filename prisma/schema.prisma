generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String // "Mom", "Dad", etc.
  credentialId  String    @unique
  publicKey     Bytes
  transports    String? // JSON string
  counter       BigInt    @default(0) // For WebAuthn replay protection
  createdAt     DateTime  @default(now())
  inviteToken   String?   @unique
  inviteExpires DateTime?
  isAdmin       Boolean   @default(false)
  lists         List[]
}

model List {
  id         String      @id @default(cuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  items      Item[]
  shareLinks ShareLink[]
}

model Item {
  id          String  @id @default(cuid())
  listId      String
  list        List    @relation(fields: [listId], references: [id])
  title       String
  description String
  url         String?
  purchased   Boolean @default(false)
  purchasedBy String?
}

// Temporary share links for lists. A link allows anyone with the token
// to view the list without signing in until it expires.
model ShareLink {
  id        String   @id @default(cuid())
  token     String   @unique
  listId    String
  list      List     @relation(fields: [listId], references: [id])
  createdBy String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
